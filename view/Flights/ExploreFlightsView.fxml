<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" styleClass="background" prefHeight="200.0" prefWidth="600.0" spacing="20" 
xmlns:fx="http://javafx.com/fxml/1"
fx:controller="controller.Flights.ExploreFlightsController">

    <ImageView fitWidth="790" fitHeight="225"> 
      <image>
        <Image url="/image/flight.png"/>
      </image>
    </ImageView>

    <Separator/>
        <Label fx:id="flightsWelcomeTxt" styleClass="heading"/>
    <Separator/>

    <GridPane alignment="BOTTOM_CENTER">
      <columnConstraints>
        <ColumnConstraints percentWidth="20" hgrow="ALWAYS"/>
        <ColumnConstraints percentWidth="20" hgrow="ALWAYS"/>
        <ColumnConstraints percentWidth="20" hgrow="ALWAYS"/>
        <ColumnConstraints percentWidth="20" hgrow="ALWAYS"/>
        <ColumnConstraints percentWidth="20" hgrow="ALWAYS"/>
      </columnConstraints>
      <Button fx:id="viewFlightsBtn" text="View All Flights"  GridPane.columnIndex="0" maxWidth="Infinity"/>
      <Button fx:id="viewFitleredFlightsBtn" text="View Filtered Flights" GridPane.columnIndex="1" maxWidth="Infinity"/>
      <Button fx:id="addFlightBtn" text="Add Flight" GridPane.columnIndex="2" maxWidth="Infinity"/>
      <Button fx:id="removeFlightsBtn" text="Remove Flight" GridPane.columnIndex="3" maxWidth="Infinity"/>
      <Button fx:id="closeBtn" text="Close" onAction="#handleClose" GridPane.columnIndex="4" maxWidth="Infinity"/>
    </GridPane>

    <stylesheets>
        <URL value="@/view/style.css"/>
    </stylesheets>  
</VBox>